<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chxsyz.demo.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.chxyz.demo.model.UserDO" >
        <result column="ID" property="id" jdbcType="BIGINT" />
        <result column="USERNAME" property="userName" jdbcType="VARCHAR" />
        <result column="PASSWORD" property="password" jdbcType="VARCHAR" />
        <result column="CREATED_AT" property="createTime" jdbcType="TIMESTAMP" />
        <result column="SEX" property="sex" jdbcType="VARCHAR"/>
        <result column="DOB" property="dob" jdbcType="DATE" />
    </resultMap>

    <sql id="Base_Column_List" >
        ID,
        USERNAME,
        PASSWORD,
        CREATED_AT,
        SEX,
        DOB
    </sql>

    <select id="queryAll" resultMap="BaseResultMap"  >
        SELECT
        <include refid="Base_Column_List" />
        FROM users
    </select>

    <select id="queryUserById" parameterType="java.lang.Integer" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE ID = #{ID}
    </select>

    <select id="queryUserByName" parameterType="java.lang.String" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM users
        WHERE USERNAME = #{USERNAME}
    </select>

    <insert id="insertUser" parameterType="com.chxyz.demo.model.UserDO">
       INSERT INTO
       users
       		(ID, USERNAME,PASSWORD,CREATED_AT, SEX, DOB)
       	VALUES
       		(#{ID}, #{USERNAME}, #{PASSWORD}, #{CREATED_AT, #{SEX}, #{DOB})
    </insert>

    <update id="updateUser" parameterType="com.chxyz.demo.model.UserDO" >
        UPDATE
        users
        SET
        <if test="USERNAME != null">USERNAME = #{USERNAME},</if>
        <if test="PASSWORD != null">PASSWORD = #{PASSWORD},</if>
        <if test="SEX != null"> SEX = #{SEX},</if>
        <if test="DOB != null"> DOB = #{DOB}</if>
        WHERE
        id = #{id}
    </update>

    <delete id="deleteUser" parameterType="java.lang.Integer" >
       DELETE FROM
       		 users
       WHERE
       		 id =#{id}
    </delete>

</mapper>

